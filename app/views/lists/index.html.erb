<div class="cover mb-4 d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url(https://source.unsplash.com/random);">
  <div class="text-center text-white">
    <h1 class="display-1">Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <ul class="list-group mb-3">
        <% @lists.each do |list| %>
          <li class="list-group-item">
            <%= link_to list.name, list_path(@lists) %>
          </li>
        <% end %>
    </ul>
  </div>
</div>
